<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipanExamen2.AboutPage"
             Title="About">

    <Grid RowSpacing="5" ColumnSpacing="5"
          Padding="0"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Row="0" Grid.Column="0"
                     BackgroundColor="#ff3ae7"
                     Padding="10"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     >
            <Label Text="Nombre" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
            <Label Text="Jhonatan Tipan" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
        </StackLayout>

        <StackLayout Grid.Row="0" Grid.Column="1"
                     BackgroundColor="#337aff"
                     Padding="10"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     >
            <Label Text="Fecha de Nacimiento" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
            <Label Text="03/06/2025" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
        </StackLayout>

        <StackLayout Grid.Row="1" Grid.Column="0"
                     BackgroundColor="#3cff33"
                     Padding="10"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     >
            <Label Text="Intereses" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
            <Label Text="Tecnología, Programación" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
        </StackLayout>

        <StackLayout Grid.Row="1" Grid.Column="1"
                     BackgroundColor="#ffffff"
                     Padding="10"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     >
            <Label Text="Versión" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
            <Label Text="1.0.0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Black"/>
        </StackLayout>

    </Grid>
</ContentPage>
